{
  "name": "apollo-opentracing",
  "version": "0.0.0-development",
  "description": "Trace your GraphQL server with Opentracing",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "tsc",
    "prepare": "npm run clean && npm run compile",
    "test": "jest",
    "test:debug": "ndb ./node_modules/.bin/jest --runInBand",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once --pro"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": "DanielMSchmidt/apollo-opentracing",
  "author": "Daniel Schmidt <danielmschmidt92@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "apollo-server-env": "*",
    "graphql": "0.10.x - 14.0.x",
    "opentracing": "*"
  },
  "dependencies": {
    "graphql-extensions": "^0.2.0"
  },
  "devDependencies": {
    "@types/graphql": "14.0.0",
    "@types/jest": "23.3.2",
    "@types/node": "10.9.4",
    "apollo-server": "^2.0.7",
    "apollo-server-env": "2.0.3",
    "graphql": "14.0.2",
    "jest": "23.6.0",
    "opentracing": "0.14.3",
    "semantic-release": "15.9.15",
    "travis-deploy-once": "5.0.7",
    "ts-jest": "23.1.4",
    "typescript": "3.0.3"
  }
}
